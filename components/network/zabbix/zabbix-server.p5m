set name=pkg.fmri value=pkg:/$(COMPONENT_FMRI)/server@$(IPS_COMPONENT_VERSION),$(BUILD_VERSION)
set name=pkg.summary value="$(COMPONENT_SUMMARY)"
set name=info.classification value="$(COMPONENT_CLASSIFICATION)"
set name=info.upstream-url value=$(COMPONENT_PROJECT_URL)
set name=info.source-url value=$(COMPONENT_ARCHIVE_URL)
set name=org.opensolaris.consolidation value=$(CONSOLIDATION)

license $(COMPONENT_LICENSE_FILE) license='$(COMPONENT_LICENSE)'

# SMF Manifest (Not provided upstream)
file files/zabbix-server.xml path=lib/svc/manifest/application/management/zabbix-server.xml restart_fmri=svc:/system/manifest-import:default

# pkg has problems finding these dependencies somehow thus they are added here manually
depend fmri=library/zlib type=require
depend fmri=system/library/math type=require
depend fmri=database/postgres-11/library type=require
depend fmri=library/libxml2 type=require
depend fmri=library/libssh2 type=require
depend fmri=database/mariadb-103/library type=require

#Depend on the common zabbix package
depend fmri=$(COMPONENT_FMRI)/common type=require

depend fmri=service/database/postgres-11 type=require
depend fmri=library/libevent type=require

file path=etc/zabbix/zabbix_server.conf owner=root group=root mode=0644 preserve=true
link path=usr/sbin/zabbix_server target=../zabbix/mysql/sbin/zabbix_server mediator=zabbix-server mediator-implementation=mysql
link path=usr/sbin/zabbix_server target=../zabbix/psql/sbin/zabbix_server mediator=zabbix-server mediator-implementation=postgres
file path=usr/share/man/man8/zabbix_server.8
file path=usr/zabbix/psql/sbin/zabbix_server pkg.depend.bypass-generate=.*
file path=usr/zabbix/mysql/sbin/zabbix_server pkg.depend.bypass-generate=.*

#Default Script and module locations
dir path=usr/share/zabbix/alertscripts
dir path=usr/share/zabbix/externalscripts
dir path=usr/share/zabbix/ssl/certs
dir path=usr/share/zabbix/ssl/keys
dir path=usr/lib/amd64/modules


# Database Upgrade files
file path=usr/share/zabbix/database/database/elasticsearch/elasticsearch.map
file path=usr/share/zabbix/database/database/ibm_db2/data.sql
file path=usr/share/zabbix/database/database/ibm_db2/images.sql
file path=usr/share/zabbix/database/database/ibm_db2/schema.sql
file path=usr/share/zabbix/database/database/mysql/data.sql
file path=usr/share/zabbix/database/database/mysql/images.sql
file path=usr/share/zabbix/database/database/mysql/schema.sql
file path=usr/share/zabbix/database/database/oracle/data.sql
file path=usr/share/zabbix/database/database/oracle/images.sql
file path=usr/share/zabbix/database/database/oracle/schema.sql
file path=usr/share/zabbix/database/database/postgresql/data.sql
file path=usr/share/zabbix/database/database/postgresql/images.sql
file path=usr/share/zabbix/database/database/postgresql/schema.sql
file path=usr/share/zabbix/database/database/postgresql/timescaledb.sql
file path=usr/share/zabbix/database/database/sqlite3/data.sql
file path=usr/share/zabbix/database/database/sqlite3/images.sql
file path=usr/share/zabbix/database/database/sqlite3/schema.sql
